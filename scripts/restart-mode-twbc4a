#!/bin/bash

set -e
source functions.sh
source sensors.sh
source beamformer.sh

now=$(date +%s)
timeout=150

limit=$[now+timeout]

kcs_debug "changing mode to wideband"

await_mode_sensors
disable_bf_count

kcs_change_corr twbc4a

kcs_debug "running connect"

while ! kcpcmd -k -m -t 120 connect ${CORR_CONFIG}/twbc4a ; do
  kcs_check_timeout ${limit}
  kcs_corr_log
  sleep 1
  kcs_info "still trying to get corr to connect"
done

kcs_info "running initialise"
if kcpcmd -k -m -t 120 initialise 2 ; then
  kcs_corr_log
  change_mode_sensors ${KATCP_MODE} twbc4a
  exit 0
fi

kcs_corr_log
kcs_error "corr initialise failed"

exit 1
